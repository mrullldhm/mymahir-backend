<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/CSS/table.css">
    <link rel="stylesheet" href="/CSS/header.css">
    <link rel="stylesheet" href="/CSS/style.css">

    <header class="site-header">
      <div class="container">
        <a class="logo" href="/">Brand</a>
        <button class="menu-btn" aria-expanded="false" aria-controls="main-nav">
          <span class="visually-hidden">Menu</span>
          <span aria-hidden="true" class="hamburger"></span>
        </button>
        <nav id="main-nav" class="main-nav" role="navigation">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/students">Student</a></li>
            <li><a href="/posting">Posting</a></li>
            <li><a href="/contacts">Contacts</a></li>
            <li><a class="cta" href="#">Login</a></li>
          </ul>

        </nav>
      </div>
    </header>
</head>
<body>
    <div class="header">
        <h1><%= title %></h1>
        <p><%= content %></p>
    </div>

    <div class="add-button-container">
        <a href="/students/add" class="add-button">
            <i class="fa-solid fa-plus"></i> Add New Student
        </a>
    </div>

    <div class="student-table">
  <table>
    <tr>
        <th> No </th>
        <th> Name </th>
        <th> Student No </th>
        <th> Email </th>
        <th> Action </th>
    </tr>
    <% students.forEach( function( student, index ){ %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= student.name %></td>
        <td><%= student.studentno %></td>
        <td><%= student.email %></td>
        <td>
          <div class="actions">
            <a href="/students/<%= student.id %>" class="btn btn-view" title="View">
              <i class="fa-solid fa-eye"></i>
            </a>
            <a href="students/update/<%= student.id %>" class="btn btn-edit" title="Edit">
              <i class="fa-solid fa-pen"></i>
            </a>
            <form 
                action="/students/delete/<%= student.id %>?_method=DELETE" 
                method="POST" 
                style="display: inline;">
                <button type="submit" class="btn btn-delete" title="Delete" onclick="return confirm( 'Are you sure you want to delete this student?' )">
                <i class="fa-solid fa-trash"></i>
                </button>
            </form>
          </div>
        </td>
      </tr>
    <% }); %>
  </table>
</div>

</body>
</html>